<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" stylesheets="@../MainStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.RegistrationController">
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="boldText" text="Welcome Tim Hansen" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="You have the following lessons today:" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0" styleClass="box">
               <children>
                  <Label prefWidth="100.0" text="SCO" />
                  <Label text="09:30 - 11:30" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0" styleClass="box">
               <children>
                  <Label prefWidth="100.0" text="SDE" />
                  <Label text="12:00 - 14:30" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <Label text="Would you like to register as attending?" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#nextScreen" styleClass="confirm" text="✔" />
                  <Button mnemonicParsing="false" onAction="#nextScreen" styleClass="decline" text="❌" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</BorderPane>
